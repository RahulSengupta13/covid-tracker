<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="@color/color_on_secondary"
    app:cardCornerRadius="24dp"
    app:cardElevation="@dimen/standard_quarter_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="?actionBarSize"
        android:padding="@dimen/standard_half_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_half_margin"
            android:layout_marginEnd="@dimen/standard_half_margin"
            android:background="@null"
            android:hint="@string/search_countries"
            android:lines="1"
            android:maxLength="10"
            android:textAppearance="@style/Body1.Light"
            android:transitionName="toolbarTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_close_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_close_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/standard_margin"
            android:elevation="@dimen/standard_half_margin"
            tools:visibility="visible"
            android:tint="@color/color_primary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/search_title"
            app:layout_constraintEnd_toStartOf="@id/search_icon"
            app:layout_constraintStart_toEndOf="@id/search_title"
            app:layout_constraintTop_toTopOf="@id/search_title"
            app:srcCompat="@drawable/ic_cancel_24px" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/search_toolbar_icon_background"
            android:elevation="@dimen/standard_half_margin"
            android:padding="@dimen/standard_quarter_margin"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/search_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_close_icon"
            app:layout_constraintTop_toTopOf="@id/search_title"
            app:srcCompat="@drawable/ic_search_24px" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>